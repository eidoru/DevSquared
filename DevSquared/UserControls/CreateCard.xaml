<UserControl x:Class="DevSquared.UserControls.CreateCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DevSquared.UserControls"
             xmlns:CustomControls="clr-namespace:DevSquared.CustomControls"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="450">
    <CustomControls:CustomSecondaryButton Background="#FFFFFF"
                                          Command="{Binding DataContext.CoursesCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}}">
        <Image Source="pack://application:,,,/DevSquared;component/Images/Plus.png"
               Width="28"
               Height="28"/>
    </CustomControls:CustomSecondaryButton>
</UserControl>
